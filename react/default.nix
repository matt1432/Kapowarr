{
  buildNpmPackage,
  kapowarr,
  ...
}:
buildNpmPackage {
  pname = "kapowarr-web";
  version = kapowarr.version;

  src = ./.;

  npmDepsHash = "sha256-hoD/kFgHBVWC5kriGz4b+LyKdk3sdhoZ3PM1LJcx10k=";

  installPhase = ''
    runHook preInstall

    mkdir -p $out/share
