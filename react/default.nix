{
  buildNpmPackage,
  kapowarr,
  ...
}:
buildNpmPackage {
  pname = "kapowarr-web";
  version = kapowarr.version;

  src = ./.;

  npmDepsHash = "sha256-nJ25GNgPvp2lfZckyOklqDXS5QHAnngcrHVuKVkS3yc=";

  npmInstallFlags = ["--legacy-peer-deps"];

  installPhase = ''
    runHook preInstall

    mkdir -p $out/share
    cp -a dist/out $out/share/kapowarr-web

    runHook postInstall
  '';
}
